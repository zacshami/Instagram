<h1> Registration Form </h1>

<%= form_for @user do |f| %>

    <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
    </div>
    <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
    </div>
    <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
    </div>
    <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
    </div>
    <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
    </div>
        <div class="action"> <%=submit_tag "signup" %>
    </div>

 <%end%>